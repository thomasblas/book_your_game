<div class="dashboard_banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn-techno.konbini.com/fr/files/2020/12/popcornfeat.jpg?ratio=16:9&w=640);">
  <h1 class="mb-3"><%= current_user.nickname %>'dashboard</h1>
  <%= image_tag "#{current_user.photo}", class: "avatar-large", alt: "#{current_user.nickname}" %>
</div>
<div>
  <%= link_to "new_video_game", new_video_game_path, class: "preorder" %>
</div>
<h2>My games</h2>
<% @games.each do |game| %>
  <%= render partial: "shared/card-dashboard", locals: {photo: game.photo, title: game.title, available: game.available}  %>
<% end %>
<h2>My rents</h2>
<% @rents.each do |rent|  %>
  <p><%= "#{rent.video_game.title} from #{rent.video_game.user.nickname}" %></p>
<% end %>
