<div class="card-product">
  <% if game.photo %>
    <img src=<%= game.photo %> />
  <% end %>
  <div class="card-product-infos">
    <h2><%= game.title %></h2>
    <p><%= game.plateform %></p>
    <p><%= game.price %>â‚¬ per day</p>
    <i class="fas fa-trash-alt"><%= link_to " Remove This Game",
                video_game_path(VideoGame.find_by(id: game.id)),
                method: :delete,
                data: {confirm: "Are you sure ?"}, style:"text-decoration:none; color: var(--text-color); font-weight: lighter"  %></i>
    <i class="fas fa-edit"><%= link_to " Edit This Game",
