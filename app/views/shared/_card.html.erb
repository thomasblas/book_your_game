<div class="wrapper p-0">
  <% if photo.present? %>
    <div class="overviewInfo" style="background: linear-gradient(rgba(0, 0, 0, 0.2),rgba(0,0,0,0.2)),url('<%= cl_image_path photo.key, height: 324, crop: :fill %>');background-size: cover;background-position:center;">
    <% else %>
      <div class="overviewInfo" style="background: linear-gradient(rgba(0, 0, 0, 0.2),rgba(0,0,0,0.2)),url('<%= cl_image_path "rar7ij31rdt35519xbe2x3thlbj9", height: 324, crop: :fill %>');background-size: cover;background-position:center;">
      <% end %>
      <div class="productImage">
        <img src="https://www.eclypsia.com/content/Nintendo/Switch/joycon01.png" alt="product: ps5 controller image" width="30px">
      </div>
    </div>
    <div class="productSpecifications" style=background-color:var(--grey)>
      <div>
        <h2 style=margin-bottom:15px;><%= title %></h2>
        <div class="productinfo">
          <div>
            <p class="m-0"><U>Platform</U> : <%= plateform %></p>
          </div>
          <div>
            <p class="m-0"><U>Category</U> : <%= category %></p>
          </div>
          <div>
            <p class="m-0"><U>Availability</U> : <%= available %></p>
          </div>
          <p class="m-0" style=margin-bottom:10px;> <I><%= "Provided by: " %><%= user.nickname %></I></p>
        </div>
      </div>
      <div class="actions">
        <div class="checkoutButton" style=background-color:var(--grey)>
          <div class="priceTag">
            <span>â‚¬</span><%= price %> <%= " / Day" %>
          </div>
          <% if user_signed_in? && current_user != user %>
            <button type="button" class="preorder" data-toggle="modal" data-target="#dateModal" data-game="<%= title %>" data-game-id=<%= id %> data-user-id=<%= current_user.id %>>
              <p>Rent Now !</p>
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
