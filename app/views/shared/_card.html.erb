<div class="wrapper p-0">
  <div class="overviewInfo" style="background: linear-gradient(rgba(0, 0, 0, 0.6),rgba(0,0,0,0.6)),url(<%= photo %>);background-size: cover;background-position:center;">
    <div class="actions">
    </div>
    <div class="productinfo">
      <div class="grouptext">
        <h3>PLATFORM</h3>
        <p><%= plateform %></p>
      </div>
      <div class="grouptext">
        <h3>CATEGORIE</h3>
        <p><%= category %></p>
      </div>
      <div class="grouptext">
        <h3>AVAILABLE</h3>
        <p><%= available %></p>
      </div>
      <div class="productImage">
        <img src="https://www.eclypsia.com/content/Nintendo/Switch/joycon01.png" alt="product: ps5 controller image" width="30px">
      </div>
    </div>
  </div>
  <div class="productSpecifications">
    <p class="m-0"><%= user.nickname %></p>
    <h2><%= title %></h2>
    <%# <div class="productFeatures">
              <div class="feature">
                <div class="featureIcon">
                </div>
                <div class="featureText">
                  <p> <strong>Futuristic</strong></p>
                  <p>Design</p>
                </div>
              </div>
              <div class="feature">
                <div class="featureIcon">
                </div>
                <div class="featureText">
                  <p> <strong>Built-in</strong></p>
                  <p>Microphone</p>
                </div>
              </div>
              <div class="feature">
                <div class="featureIcon">
                </div>
                <div class="featureText">
                  <p> <strong>Haptic</strong></p>
                  <p>Feedback</p>
                </div>
              </div>
              <div class="feature">
                <div class="featureIcon">
                </div>
                <div class="featureText">
                  <p> <strong>Fast charge</strong></p>
                  <p>USB-C port</p>
                </div>
              </div>
            </div> %>
    <div class="checkoutButton">
      <div class="priceTag">
        <span>â‚¬</span><%= price %>
      </div>
      <% if user_signed_in? %>
        <button type="button" class="preorder" data-toggle="modal" data-target="#dateModal" data-game=<%= title %> data-game-id=<%= id %> data-user-id=<%= current_user.id %>>
          <p>Rent Now !</p>
        </button>
      <% end %>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="dateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% if user_signed_in? %>
        <div class="modal-body">
          <%= simple_form_for :rent, namespace: "card_#{id}", :url => new_rent_path do |f| %>
            <%= f.input :video_game_id, :as => :hidden, input_html: {class: "game-id"} %>
            <%= f.input :user_id, :as => :hidden, input_html: {class: "user-id"} %>
            <%= f.input :rent_start_at, as: :string, required: true, input_html: {class: "rent_start_at"} %>
            <%= f.input :rent_end_at, as: :string, required: true, input_html: {class: "rent_end_at"} %>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="preorder">
                <p>Rent Now !</p>
              </button>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
